# import matplotlib as matplotlib
# %matplotlib inline
import numpy as np
import matplotlib.pyplot as plt

x = np.linspace(-np.pi, np.pi, 201)
plt.plot(x, np.sin(x))
plt.xlabel('x')
plt.ylabel('y')
plt.axis('tight')
plt.show()

x = np.linspace(-1, 3, 201)
print(np.poly([1, 1, 2]))
plt.plot(x, x**3-4*x**2+5*x-2)
plt.xlabel('x')
plt.ylabel('y')
plt.ylim(-2,2)
plt.show()
print(np.roots([ 1., -4.,  5., -2.]))

